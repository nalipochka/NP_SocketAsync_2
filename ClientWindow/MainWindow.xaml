<Window x:Class="ClientWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#A2B29F">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="1" LastChildFill="False">
            <Button x:Name="connectToServer_btn" Background="#91C788" DockPanel.Dock="Top" Margin="10" Click="connectToServer_Click">Connect to server</Button>
            <Button x:Name="disconnectToServer_btn" Background="#F38BA0" DockPanel.Dock="Bottom" Margin="10" Click="disconnectToServer_Click">Disconnect to server</Button>
        </DockPanel>
        <TextBox x:Name="connectToServer_txtBox" Background="#BDD2B6" Margin="10" BorderBrush="#7D5A50"></TextBox>
    </Grid>
</Window>
